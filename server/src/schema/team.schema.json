{
  "$id": "https://motivesports.xyz/schema/team.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Team",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the team",
      "minLength": 1
    },
    "img": {
      "type": "object",
      "properties": {
        "square": {
          "type": "string",
          "description": "A square image representing the team",
          "minLength": 4
        }
      },
      "required": ["square"]
    }
  },
  "required": ["name", "img"]
}
